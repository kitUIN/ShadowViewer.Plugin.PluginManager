{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "PluginMetaData",
  "type": "object",
  "description": "插件元数据",
  "additionalProperties": false,
  "required": [
    "Id",
    "Name",
    "Version"
  ],
  "properties": {
    "Id": {
      "type": "string"
    },
    "Name": {
      "type": "string"
    },
    "Version": {
      "type": "string"
    },
    "SdkVersion": {
      "type": "string",
      "default": "3.0.0.5"
    },
    "Priority": {
      "type": "integer",
      "format": "int32"
    },
    "Description": {
      "type": "string",
      "description": "介绍"
    },
    "Authors": {
      "type": "string",
      "description": "作者"
    },
    "WebUri": {
      "type": "string",
      "description": "项目地址"
    },
    "Logo": {
      "type": "string",
      "description": "图标\n1.本地文件,以ms-appx://开头\n2.FontIcon,以font://开头\n3.FluentRegularIcon,以fluent://regular开头\n4.FluentFilledIcon,以fluent://filled\n1.ms-appx:///Assets/Icons/Logo.png\n2.font://\\uE714\n3.fluent://regular/Apps\n4.fluent://filled/Apps"
    },
    "PluginManage": {
      "$ref": "#/definitions/PluginManage"
    },
    "AffiliationTag": {
      "description": "分类标签",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/definitions/ShadowTag"
        }
      ]
    },
    "CoreVersion": {
      "type": "string",
      "description": "Core 最低支持版本号"
    }
  },
  "definitions": {
    "PluginEntryPointType": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "EntryPointType": {
          "type": "string"
        }
      }
    },
    "PluginManage": {
      "type": "object",
      "description": "插件管理器使用数据",
      "additionalProperties": false,
      "properties": {
        "CanSwitch": {
          "type": "boolean",
          "description": "能否开关"
        },
        "CanOpenFolder": {
          "type": "boolean",
          "description": "能否打开文件夹"
        },
        "SettingsPage": {
          "description": "设置页面",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/PluginEntryPointType"
            }
          ]
        }
      }
    },
    "ShadowTag": {
      "type": "object",
      "description": "标签",
      "additionalProperties": false,
      "properties": {
        "Name": {
          "type": "string"
        },
        "BackgroundHex": {
          "type": "string"
        },
        "ForegroundHex": {
          "type": "string"
        },
        "Icon": {
          "type": [
            "null",
            "string"
          ]
        },
        "PluginId": {
          "type": "string"
        }
      }
    }
  }
}