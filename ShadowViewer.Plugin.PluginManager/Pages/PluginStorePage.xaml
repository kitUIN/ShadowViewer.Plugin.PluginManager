<Page
    mc:Ignorable="d"
    x:Class="ShadowViewer.Plugin.PluginManager.Pages.PluginStorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:community="using:CommunityToolkit.WinUI.Controls"
    xmlns:constants="using:ShadowViewer.Plugin.PluginManager.Constants"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:converters1="using:ShadowViewer.Sdk.Converters"
    xmlns:converters2="using:ShadowViewer.Plugin.PluginManager.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions1="using:ShadowViewer.Sdk.Extensions"
    xmlns:helpers="using:ShadowViewer.Plugin.PluginManager.Helpers"
    xmlns:i18N="using:ShadowViewer.Plugin.PluginManager.I18n"
    xmlns:icon="using:FluentIcons.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ShadowViewer.Plugin.PluginManager.Models"
    xmlns:responses="using:ShadowViewer.Plugin.PluginManager.Responses"
    xmlns:symbol="using:FluentIcons.Common"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Resources>
        <converters2:PluginInstallButtonConverter
            InstallValue="{i18N:Locale Key=Install}"
            InstalledValue="{i18N:Locale Key=Installed}"
            UpgradeValue="{i18N:Locale Key=Upgrade}"
            x:Name="PluginInstallButtonConverter" />
        <converters:FileSizeToFriendlyStringConverter x:Key="FileSizeToFriendlyStringConverter" />

    </Page.Resources>
    <Grid Style="{ThemeResource ShadowRootGridStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                FontSize="{ThemeResource ShadowRootTextFontSize}"
                Grid.Row="0"
                Margin="{ThemeResource ShadowRootTextMargin}"
                Text="{i18N:Locale Key=PluginStore}" />

            <GridView
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.Models, Mode=OneWay}"
                Margin="-8,0,-8,0"
                SelectionMode="None">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="models:PluginStoreModel">
                        <Grid
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="8"
                            MinHeight="300"
                            Padding="16"
                            RowSpacing="8"
                            Width="360">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid ColumnSpacing="16" Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="64" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid
                                    Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}"
                                    BorderBrush="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Grid.Column="0"
                                    Height="64"
                                    Width="64">
                                    <Viewbox
                                        Height="54"
                                        Width="54"
                                        extensions1:PluginLogoViewboxExtensions.PluginLogo="{x:Bind Logo, Mode=OneWay, Converter={StaticResource PluginPathConverter}}" />

                                </Grid>
                                <Grid
                                    Grid.Column="1"
                                    Padding="0,4"
                                    RowSpacing="6">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        FontSize="19"
                                        FontWeight="Bold"
                                        Grid.Row="0"
                                        Text="{x:Bind Name, Mode=OneWay}"
                                        TextTrimming="CharacterEllipsis" />
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="Gray"
                                        Grid.Row="1"
                                        Text="{x:Bind Authors, Mode=OneWay}"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                                <HyperlinkButton
                                    Grid.Column="2"
                                    Height="37"
                                    NavigateUri="{x:Bind WebUri, Mode=OneWay}"
                                    Padding="5"
                                    VerticalAlignment="Top"
                                    Width="37">
                                    <ImageIcon
                                        Height="25"
                                        Source="{ThemeResource GithubIcon}"
                                        Width="25" />
                                </HyperlinkButton>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel
                                    Grid.Column="0"
                                    Orientation="Horizontal"
                                    Spacing="4">

                                    <ToolTipService.ToolTip>
                                        <TextBlock>
                                            <Run Text="Id" />
                                            <Run Text=": " />
                                            <Run Text="{x:Bind helpers:PluginNameHelper.GetPluginId(Id), Mode=OneWay}" />
                                        </TextBlock>
                                    </ToolTipService.ToolTip>
                                    <icon:SymbolIcon
                                        FontSize="14"
                                        Foreground="Gray"
                                        Symbol="PuzzlePiece" />
                                    <TextBlock Foreground="Gray" Text="{x:Bind helpers:PluginNameHelper.GetPluginId(Id), Mode=OneWay}" />
                                </StackPanel>
                                <StackPanel
                                    Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="4">
                                    <ToolTipService.ToolTip>
                                        <TextBlock>
                                            <Run Text="{i18N:Locale Key=UpdatedAt}" />
                                            <Run Text=": " />
                                            <Run Text="{x:Bind LastUpdated, Mode=OneWay}" />
                                        </TextBlock>
                                    </ToolTipService.ToolTip>
                                    <icon:SymbolIcon
                                        FontSize="14"
                                        Foreground="Gray"
                                        Symbol="Clock" />
                                    <TextBlock Foreground="Gray" Text="{x:Bind LastUpdated, Mode=OneWay}" />
                                </StackPanel>
                            </Grid>
                            <TextBlock
                                FontSize="17"
                                Grid.Row="2"
                                Text="{x:Bind Description, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                            <ItemsRepeater Grid.Row="3" ItemsSource="{x:Bind Tags, Mode=OneWay}">
                                <ItemsRepeater.Layout>
                                    <community:WrapLayout
                                        HorizontalSpacing="8"
                                        Orientation="Horizontal"
                                        VerticalSpacing="4" />
                                </ItemsRepeater.Layout>

                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <Border
                                            Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Margin="0,4"
                                            Padding="8,4">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <icon:SymbolIcon
                                                    FontSize="12"
                                                    Foreground="Gray"
                                                    Symbol="Tag"
                                                    VerticalAlignment="Center" />
                                                <TextBlock
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Text="{x:Bind}"
                                                    VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                            <!--  按钮  -->
                            <Grid Grid.Row="4" RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid
                                    ColumnSpacing="8"
                                    Grid.Row="0"
                                    HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox
                                        Grid.Row="0"
                                        HorizontalAlignment="Stretch"
                                        ItemsSource="{x:Bind Versions, Mode=OneWay}"
                                        SelectedItem="{x:Bind Version, Mode=TwoWay}"
                                        SelectionChanged="VersionChanged"
                                        Tag="{x:Bind Id, Mode=OneWay}" />
                                    <Button
                                        Command="{x:Bind CheckDependenciesCommand}"
                                        Grid.Column="1"
                                        Height="32">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <icon:SymbolIcon
                                                FontSize="16"
                                                Foreground="{x:Bind GetDependencyColorBrush(DependencyCheckStatus), Mode=OneWay}"
                                                Symbol="{x:Bind GetDependencyCheckSymbol(DependencyCheckStatus), Mode=OneWay}" />
                                            <TextBlock Text="{i18N:Locale Key=DependencyCheck}" />
                                        </StackPanel>
                                        <Button.Flyout>
                                            <Flyout Placement="BottomEdgeAlignedRight">
                                                <StackPanel Spacing="10" Width="340">
                                                    <StackPanel Spacing="4">
                                                        <TextBlock
                                                            Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Text="{i18N:Locale Key=RuntimeSdk}" />
                                                        <Grid
                                                            Background="Transparent"
                                                            ColumnSpacing="6"
                                                            Margin="0,2"
                                                            Padding="4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <icon:SymbolIcon
                                                                FontSize="14"
                                                                Foreground="{x:Bind GetDependencyColorBrush(SdkVersionStatus), Mode=OneWay}"
                                                                Grid.Column="0"
                                                                Margin="0,2,0,0"
                                                                Symbol="{x:Bind GetDependencySymbol(SdkVersionStatus), Mode=OneWay}"
                                                                VerticalAlignment="Center" />
                                                            <TextBlock
                                                                FontSize="16"
                                                                Grid.Column="1"
                                                                Text="ShadowViewer.Sdk"
                                                                TextTrimming="CharacterEllipsis"
                                                                ToolTipService.ToolTip="ShadowViewer.Sdk"
                                                                VerticalAlignment="Center" />

                                                            <TextBlock
                                                                FontSize="16"
                                                                Foreground="{x:Bind GetDependencyColorBrush(SdkVersionStatus), Mode=OneWay}"
                                                                Grid.Column="2"
                                                                Margin="8,0"
                                                                VerticalAlignment="Center">
                                                                <ToolTipService.ToolTip>
                                                                    <TextBlock>
                                                                        <Run Text="{i18N:Locale Key=NeedVersion}" />
                                                                        <Run Text=": " />
                                                                        <Run Text="{x:Bind SdkVersion, Mode=OneWay}" />
                                                                        <LineBreak />
                                                                        <Run Text="{i18N:Locale Key=CurrentVersion}" />
                                                                        <Run Text=": " />
                                                                        <Run Foreground="{x:Bind GetDependencyColorBrush(SdkVersionStatus), Mode=OneWay}" Text="{x:Bind constants:PluginConstants.SdkVersion, Mode=OneWay}" />
                                                                    </TextBlock>
                                                                </ToolTipService.ToolTip>
                                                                <Run
                                                                    FontSize="13"
                                                                    Foreground="Gray"
                                                                    Text="{x:Bind SdkVersion, Mode=OneWay}" />
                                                                <Run
                                                                    FontSize="16"
                                                                    Foreground="{x:Bind GetDependencyColorBrush(SdkVersionStatus), Mode=OneWay}"
                                                                    Text="{x:Bind constants:PluginConstants.SdkVersion, Mode=OneWay}" />
                                                            </TextBlock>

                                                        </Grid>
                                                    </StackPanel>

                                                    <MenuFlyoutSeparator />

                                                    <StackPanel Spacing="4">
                                                        <TextBlock
                                                            Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Text="{i18N:Locale Key=PluginDependencies}" />
                                                        <ItemsControl ItemsSource="{x:Bind Dependencies, Mode=OneWay}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate x:DataType="models:PluginItemDependency">
                                                                    <Grid
                                                                        Background="Transparent"
                                                                        ColumnSpacing="6"
                                                                        Margin="0,2"
                                                                        Padding="4">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <icon:SymbolIcon
                                                                            FontSize="14"
                                                                            Foreground="{x:Bind GetDependencyColorBrush(Status), Mode=OneWay}"
                                                                            Grid.Column="0"
                                                                            Margin="0,2,0,0"
                                                                            Symbol="{x:Bind GetDependencySymbol(Status), Mode=OneWay}"
                                                                            VerticalAlignment="Center" />
                                                                        <TextBlock
                                                                            FontSize="16"
                                                                            Grid.Column="1"
                                                                            Text="{x:Bind helpers:PluginNameHelper.GetPluginId(Id), Mode=OneWay}"
                                                                            TextTrimming="CharacterEllipsis"
                                                                            ToolTipService.ToolTip="{x:Bind Id}"
                                                                            VerticalAlignment="Center" />
                                                                        <TextBlock
                                                                            Grid.Column="2"
                                                                            Margin="8,0"
                                                                            VerticalAlignment="Center">
                                                                            <ToolTipService.ToolTip>
                                                                                <TextBlock>
                                                                                    <Run Text="{i18N:Locale Key=NeedVersion}" />
                                                                                    <Run Text=": " />
                                                                                    <Run Text="{x:Bind Need, Mode=OneWay}" />
                                                                                    <LineBreak />
                                                                                    <Run Text="{i18N:Locale Key=CurrentVersion}" />
                                                                                    <Run Text=": " />
                                                                                    <Run Foreground="{x:Bind GetDependencyColorBrush(Status), Mode=OneWay}" Text="{x:Bind Installed, Mode=OneWay}" />
                                                                                </TextBlock>
                                                                            </ToolTipService.ToolTip>
                                                                            <Run
                                                                                FontSize="13"
                                                                                Foreground="Gray"
                                                                                Text="{x:Bind Need, Mode=OneWay}" />
                                                                            <Run
                                                                                FontSize="16"
                                                                                Foreground="{x:Bind GetDependencyColorBrush(Status), Mode=OneWay}"
                                                                                Text="{x:Bind Installed, Mode=OneWay}" />
                                                                        </TextBlock>

                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Flyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>
                                <Grid
                                    ColumnSpacing="8"
                                    Grid.Row="1"
                                    HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Command="{x:Bind InstallCommand, Mode=OneWay}"
                                        Content="{x:Bind InstallButtonText, Mode=OneWay}"
                                        Grid.Column="0"
                                        HorizontalAlignment="Stretch" />
                                    <Button
                                        Command="{x:Bind DownloadToLocalCommand, Mode=OneWay}"
                                        Grid.Column="1"
                                        Height="32"
                                        ToolTipService.ToolTip="{i18N:Locale Key=DownloadToLocal}">
                                        <icon:SymbolIcon FontSize="15" Symbol="ArrowDownload" />
                                    </Button>
                                </Grid>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

        </Grid>

        <TeachingTip
            ActionButtonClick="GoToSettings_Click"
            ActionButtonContent="{i18N:Locale Key=GoToSettings}"
            IsLightDismissEnabled="False"
            PreferredPlacement="Center"
            Subtitle="{i18N:Locale Key=PleaseConfigureStoreApi}"
            Title="{i18N:Locale Key=StoreApiRequired}"
            x:Name="StoreUriTeachingTip" />

        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Vertical"
            Spacing="10"
            VerticalAlignment="Center"
            x:Name="LoadingProgress">
            <ProgressRing
                Height="64"
                IsActive="True"
                Width="64" />
            <TextBlock Text="{i18N:Locale Key=RequestingPlugin}" />
        </StackPanel>
    </Grid>
</Page>