<Page
    x:Class="ShadowViewer.Plugin.PluginManager.Pages.PluginStorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:converters2="using:ShadowViewer.Plugin.PluginManager.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18N="using:ShadowViewer.Plugin.PluginManager.I18n"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ShadowViewer.Plugin.PluginManager.Models"
    xmlns:responses="using:ShadowViewer.Plugin.PluginManager.Responses"
    xmlns:winUi="using:FluentIcons.WinUI"
    xmlns:extensions1="using:ShadowViewer.Sdk.Extensions"
    mc:Ignorable="d">
    <Page.Resources>
        <converters2:PluginInstallButtonConverter
            x:Name="PluginInstallButtonConverter"
            InstallValue="{i18N:Locale Key=Install}"
            InstalledValue="{i18N:Locale Key=Installed}"
            UpgradeValue="{i18N:Locale Key=Upgrade}" />
        <converters:FileSizeToFriendlyStringConverter x:Key="FileSizeToFriendlyStringConverter" />


    </Page.Resources>
    <Grid
        Background="{ThemeResource LayerFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1" Loaded="FrameworkElement_OnLoaded"
        CornerRadius="{ThemeResource NavigationViewContentGridCornerRadius}">
        <GridView
            Margin="20,10,0,0"
            ItemsSource="{x:Bind ViewModel.Models, Mode=OneWay}"
            SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:PluginStoreModel">
                    <Grid Width="330"
                          Height="210"
                          Padding="10,0,10,10"
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="1"
                          CornerRadius="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Viewbox VerticalAlignment="Center"
                                     Grid.Column="0"
                                     Margin="6"
                                     Width="48"
                                     Height="48"
                                     extensions1:PluginLogoViewboxExtensions.PluginLogo="{x:Bind Logo, Mode=OneWay, Converter={StaticResource PluginPathConverter}}" />
                            <StackPanel VerticalAlignment="Center" Grid.Column="1" Orientation="Vertical">
                                <!-- 插件名称：加粗、较大字体 -->
                                <TextBlock Margin="6,0,0,0" Text="{x:Bind Name, Mode=OneWay}" FontSize="20" FontWeight="Bold"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTipService.ToolTip="{x:Bind Name, Mode=OneWay}" />
                                <!-- 版本号：次要信息，灰色小字体 -->
                                <Button Padding="6,0" Style="{ThemeResource PointerOverButtonStyle}">
                                    <TextBlock Text="{x:Bind Version, Mode=OneWay}" FontSize="14"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </Button>
                            </StackPanel>
                            <HyperlinkButton Grid.Column="2"
                                             Grid.Row="0"
                                             Margin="0,6,0,0"
                                             Width="37"
                                             Height="37"
                                             Padding="5"
                                             VerticalAlignment="Top"
                                             HorizontalAlignment="Right"
                                             NavigateUri="{x:Bind WebUri, Mode=OneWay}">
                                <ImageIcon
                                    Width="25"
                                    Height="25"
                                    Source="{ThemeResource GithubIcon}" />
                            </HyperlinkButton>
                        </Grid>
                        <Grid Grid.Row="1" RowSpacing="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    Background="{ThemeResource CardStrokeColorDefaultBrush}">
                            </Border>
                            <!-- 作者和更新时间 -->
                            <Grid Grid.Row="1">
                                <TextBlock Text="{x:Bind Authors, Mode=OneWay}"  HorizontalAlignment="Left" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Text="{x:Bind LastUpdated, Mode=OneWay}" HorizontalAlignment="Right" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </Grid>
                            <TextBlock Margin="0,4,0,0"
                                Grid.Row="2"
                                Text="{x:Bind Description}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />

                            <Button Style="{StaticResource AccentButtonStyle}" Grid.Row="3" HorizontalAlignment="Stretch"
                                    Command="{x:Bind InstallCommand, Mode=OneWay}">
                                <TextBlock Text="{x:Bind InstallButtonText, Mode=OneWay}" />
                            </Button>
                        </Grid>

                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <StackPanel x:Name="LoadingProgress" Orientation="Vertical" VerticalAlignment="Center"
                    HorizontalAlignment="Center" Spacing="10">
            <ProgressRing IsActive="True" Width="64" Height="64" />
            <TextBlock Text="{i18N:Locale Key=RequestingPlugin}"></TextBlock>
        </StackPanel>
    </Grid>
</Page>